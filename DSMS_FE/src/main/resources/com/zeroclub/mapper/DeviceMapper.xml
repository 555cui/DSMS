<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeroclub.dao.DeviceDao">
    <resultMap id="result" type="com.zeroclub.entity.Device">
        <id column="id" property="id"/>
        <result property="name" column="name"/>
        <result property="width" column="width"/>
        <result property="height" column="height"/>
        <result property="mac" column="mac"/>
        <result property="address" column="address"/>
        <result property="createTime" column="createTime"/>
        <result property="updateTime" column="updateTime"/>
        <association property="user" column="userId" select="com.zeroclub.dao.UserDao.getById"/>
        <association property="group" column="groupId" select="com.zeroclub.dao.DeviceGroupDao.getById"/>
    </resultMap>

    <select id="getById" resultMap="result">
        select * from table_device
        where id = #{id}
    </select>
    <select id="getOne" resultMap="result">
        select * from table_device
        where 1=1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="mac != null and mac != ''">
            and mac = #{mac}
        </if>
        <if test="user != null">
            <if test="user.id != null and user.id != ''">
                and userId = #{user.id}
            </if>
        </if>
        <if test="group != null">
            <if test="group.id != null and group.id != ''">
                and groupId = #{group.id}
            </if>
        </if>
    </select>
    <select id="getList" resultMap="result">
        select * from table_device
        where 1=1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="mac != null and mac != ''">
            and mac = #{mac}
        </if>
        <if test="user != null">
            <if test="user.id != null and user.id != ''">
                and userId = #{user.id}
            </if>
        </if>
        <if test="group != null">
            <if test="group.id != null and group.id != ''">
                and groupId = #{group.id}
            </if>
        </if>
    </select>

    <insert id="insert">
        insert into table_device(id, name, width, height, mac, address, userId, groupId)
        values(#{id}, #{name}, #{width}, #{height}, #{mac}, #{address}, #{user.id}, #{group.id})
    </insert>

    <delete id="delete">
        delete from table_device
        where 1=1
        <if test="id!=null and id!=''">
            and id =#{id}
        </if>
        <if test="name !=null and name!=''">
            and name=#{name}
        </if>
        <if test="mac!=null and mac!=''">
            and mac=#{mac}
        </if>
        <if test="user!=null">
            <if test="user.id!=null and user.id!=''">
                and userId = #{user.id}
            </if>
        </if>
        <if test="group!=null">
            <if test="group.id!=null and group.id!=''">
                and groupId =#{group.id}
            </if>
        </if>
    </delete>

    <update id="update">
        update table_device
        <set>
            <if test="name!=null and name!=''">
                name = #{name},
            </if>
            <if test="address!=null and address!=''">
                address = #{address},
            </if>
            <if test="group!=null">
                <if test="group.id!=null and group.id!=''">
                    groupId = #{group.id},
                </if>
            </if>
        </set>
        where id =#{id}
        <if test="user!=null">
            <if test="user.id!=null and user.id!=''">
                and userId = #{user.id}
            </if>
        </if>
    </update>

    <select id="getByGroup" resultMap="result">
        select * from table_device
        where groupId = #{id}
    </select>
</mapper>